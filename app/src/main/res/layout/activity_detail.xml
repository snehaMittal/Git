<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F26EF6"
    tools:context="com.javahelps.git.DetailActivity">

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="116dp"
        android:layout_height="150dp"
        app:srcCompat="@android:color/background_light"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintVertical_bias="0.021" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="27dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        android:layout_marginBottom="-1dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteY="115dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="148dp"
        android:layout_height="46dp"
        android:text="View Repository"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/repos"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:text="Repositories : "
        android:textStyle="bold"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.136"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.122" />

    <TextView
        android:id="@+id/followers"
        android:textColor="#000"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:text="Followers : "
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/repos"
        android:layout_marginLeft="29dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/following"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:text="Following : "
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/followers"
        android:layout_marginLeft="29dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Browser View"
        android:background="#000"
        android:textColor="#FFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/reponum"
        android:layout_width="150dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toRightOf="@+id/repos"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="@+id/repos"
        android:layout_marginTop="8dp"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/repos"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/followersnum"
        android:layout_width="150dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/followers"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="@+id/followers"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/followers"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/followingnum"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:textStyle="bold"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/following"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/following"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/following"
        android:layout_marginLeft="0dp" />

</android.support.constraint.ConstraintLayout>
